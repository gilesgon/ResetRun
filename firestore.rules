rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /waitlist/{docId} {
      allow create: if isValidWaitlist(request.resource.data);
      allow read, update, delete: if false;
    }

    match /profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }

  function isValidWaitlist(data) {
    return data.keys().hasOnly(['email', 'firstName', 'lastName', 'phone', 'createdAt']) &&
      data.email is string &&
      data.email.size() >= 5 &&
      data.email.size() <= 254 &&
      data.email.matches('^.+@.+\\..+$') &&
      (!('firstName' in data) || (data.firstName is string && data.firstName.size() <= 80)) &&
      (!('lastName' in data) || (data.lastName is string && data.lastName.size() <= 80)) &&
      (!('phone' in data) || (data.phone is string && data.phone.size() <= 30)) &&
      data.createdAt is timestamp;
  }
}
